<UserControl x:Class="Treenity.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Treenity"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Loaded="UserControl_Loaded" >
    <Grid>
        <Canvas x:Name="canvasJeu">
            <Canvas.Background>
                <ImageBrush ImageSource="/Ressources/Images/ecorce.png"/>
            </Canvas.Background>
            <Button x:Name="pauseButton" VerticalAlignment="Top" Panel.ZIndex="1" Background="Transparent" BorderThickness="0" Style="{StaticResource BoutonImmobile}" HorizontalAlignment="Left" Margin="1800,30,0,0" Click="PauseButtonClick">
                <Image Source="Ressources/Images/bouton/pauseButton.png" Width="90"/>
            </Button>
            <Image x:Name="Background1" Height="1157" Source="/Ressources/Images/backgroundNiveau.png" Stretch="Fill" Width="1930" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="Background2" Height="1157" Source="/Ressources/Images/backgroundNiveau.png" Stretch="Fill" Width="1930" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="-1085"/>


        </Canvas>
        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Width="300" Height="70">

            <Rectangle Width="204" Height="24" Fill="Black" Stroke="White" StrokeThickness="2"/>

            <Rectangle x:Name="rectVieJoueur" Width="200" Height="20" Fill="Red" Canvas.Left="2" Canvas.Top="2"/>

            <TextBlock x:Name="txtVieJoueur" Text="100 / 100" 
                   Foreground="White" FontWeight="Bold" 
                   Canvas.Left="10" Canvas.Top="4"/>
            <TextBlock x:Name="numeroNiveau" Text="Niveau 1" Foreground="White" FontSize="25" FontWeight="Bold" Canvas.Left="10" Canvas.Top="30"/>

        </Canvas>

        <Grid x:Name="GridMenuPause" Visibility="Collapsed">

            <Rectangle Fill="Black" Opacity="0.5"/>

            <Grid Width="500" Height="400">
                <Grid.Background>
                    <ImageBrush ImageSource="Ressources/Images/backgroundPause.png"/>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <TextBlock Text="PAUSE" FontSize="40" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="4"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Button Margin="10" Style="{StaticResource BoutonImmobile}" Click="ReprendreClick" FontSize="20" FontWeight="Bold" Background="Transparent">
                        <Image Source="Ressources/Images/bouton/resumeButton.png" Width="150"/>
                    </Button>

                    <Button x:Name="toMenu" Margin="10" Style="{StaticResource BoutonImmobile}" Click="MenuClick" FontSize="20" FontWeight="Bold" Background="Transparent">
                        <Image Source="Ressources/Images/bouton/menuButton.png" Width="150"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid x:Name="GridGameOver" Visibility="Collapsed" Panel.ZIndex="20">

            <Rectangle x:Name="effetFin" Fill="#FF420000" Opacity="0.7"/>

            <Grid Width="500" Height="400">
                <Grid.Background>
                    <ImageBrush ImageSource="Ressources/Images/backgroundPause.png"/>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <TextBlock x:Name="titreFin" Text="GAME OVER" FontSize="50" FontWeight="Bold" 
                       Foreground="Red" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="Black"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="texteFin" Text="Vous êtes mort..." FontSize="20" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Button x:Name="deathToMenu" Style="{StaticResource BoutonImmobile}" Click="MenuClick" FontSize="20" FontWeight="Bold" Background="Transparent" Margin="0,50,0,0">
                        <Image Source="Ressources/Images/bouton/menuButton.png" Width="150"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>

</UserControl>
