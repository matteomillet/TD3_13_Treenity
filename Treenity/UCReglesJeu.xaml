<UserControl x:Class="Treenity.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Treenity"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Image Margin="12,49,12,27" Source="/Ressources/Images/PanneauRegleJeu.png" Stretch="Fill" OpacityMask="Black"/>
        <TextBox x:Name="TextboxRegleJeu" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Jeu type rogue-like ou il faut grimper un arbre, à chaque branche, le joueur fait face à un d’ennemi. Lors de chaque manche, il est possible de récupérer des items sur des ennemis tués. A la fin de chaque manche, le joueur peut sélectionner une compétence pour améliorer son personnage. Une fois arriver en haut de l'arbre, il doit affronter un boss final." VerticalAlignment="Center" Background="Transparent" FontSize="24" BorderThickness="0" Height="198" Width="644"/>
        <Button x:Name="boutonRetourRegle" Content="Button" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Height="42" Width="82"/>

    </Grid>
</UserControl>
