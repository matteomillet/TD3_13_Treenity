<UserControl x:Class="Treenity.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Treenity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Button x:Name="playButton" Background="Transparent" BorderThickness="0" Width="150" Height="85">
            <Image Source="Ressources/Images/playButton.png" Width="150"/>
        </Button>
        <Button x:Name="rulesButton" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" Width="150" Height="85">
            <Image Source="Ressources/Images/rulesButton.png" Width="150"/>
        </Button>
        <Button x:Name="quitButton" Content="Quitter" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0" Width="150" Height="85" Click="quitButton_Click"/>
    </Grid>
</UserControl>
