<UserControl x:Class="Treenity.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Treenity"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <Grid>
        <Button x:Name="playButton" Background="Transparent" BorderThickness="0" Style="{StaticResource BoutonImmobile}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Ressources/Images/bouton/playButton.png" Width="150"/>
        </Button>
        <Button x:Name="rulesButton" Background="Transparent" BorderThickness="0" Style="{StaticResource BoutonImmobile}" Margin="0,120,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Ressources/Images/bouton/rulesButton.png" Width="150"/>
        </Button>
        <Button x:Name="settingsButton" Background="Transparent" BorderThickness="0" Style="{StaticResource BoutonImmobile}" Margin="0,240,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Ressources/Images/bouton/settingsButton.png" Width="150"/>
        </Button>
        <Button x:Name="quitButton" Background="Transparent" BorderThickness="0" Style="{StaticResource BoutonImmobile}" Margin="0,360,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="quitButton_Click">
            <Image Source="Ressources/Images/bouton/quitButton.png" Width="150"/>
        </Button>
        <Button x:Name="testFinish" Content="Test" HorizontalAlignment="Left" Margin="344,99,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
